# Server Configuration
APP_ENV=development
APP_DEBUG=true

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=auction_portal
DB_USER=root
DB_PASSWORD=

# JWT Configuration
# Secret key for signing JWT tokens (change in production!)
JWT_SECRET=your-secret-key-here-change-in-production
# Token expiration time in seconds (604800 = 7 days)
JWT_EXPIRES_IN=604800

# File Upload Configuration
# Directory for storing uploaded images (relative to project root)
UPLOAD_DIR=uploads/
# Directory for storing generated thumbnail images
THUMBNAIL_DIR=uploads/thumbnails/
# Maximum file size in bytes (5242880 = 5MB)
MAX_FILE_SIZE=5242880

# Commission Configuration
# Default commission rate as decimal (0.05 = 5%)
DEFAULT_COMMISSION_RATE=0.05

# WebSocket Configuration
# Port for WebSocket server (default: 8080)
WS_PORT=8080
# Host for WebSocket server (0.0.0.0 = all interfaces)
WS_HOST=0.0.0.0
# Enable/disable WebSocket notifications (true/false)
WS_ENABLED=true
